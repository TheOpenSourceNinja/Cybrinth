#!/usr/bin/make -f

build:
./configure
touch build

build-arch: build
build-indep: build

binary: build
make -f ./Makefile
dpkg-gencontrol -c debian.control -l ChangeLog -P ./
dpkg-deb --build ./

binary-arch: build-arch binary
binary-indep: build-indep binary

clean: build
rm -f build
make -f ./Makefile clean
